<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iot.bumblebee">
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Bumblebee">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/BumblebeeOne.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.UltrassonicoActivity"
            android:theme="@style/BumblebeeOne.NoActionBar"/>
        <activity
            android:name=".ui.SobreActivity"
            android:theme="@style/BumblebeeTree.NoActionBar" />
        <activity
            android:name=".ui.MenuActivity"
            android:theme="@style/BumblebeeTwo.NoActionBar" />
        <activity
            android:name=".ui.RelatorioActivity"
            android:theme="@style/BumblebeeOne.NoActionBar" />
        <activity
            android:name=".ui.RegisterActivity"
            android:theme="@style/BumblebeeOne.NoActionBar" />

        <activity
            android:name=".ui.ActivityLogin"
            android:theme="@style/BumblebeeOne.NoActionBar" />

        <activity
            android:name=".ui.ActivityShowLogin"
            android:theme="@style/BumblebeeOne.NoActionBar" />

        <activity
            android:name=".ui.ActivityBumblebee"
            android:theme="@style/BumblebeeOne.NoActionBar" />

        <activity
            android:name=".ui.ActivityConfiguracao"
            android:theme="@style/BumblebeeTwo.NoActionBar" />

    </application>

</manifest>