<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_ultrassonico"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#8d1a1a1a"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:background="@drawable/round"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/black_500"
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:tint="@color/white"
                        android:src="@drawable/ic_dashboard" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="UltrassÃ´nico"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bariol_bold"
                    android:textSize="14sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_acelerometro"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#8d1a1a1a"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:background="@drawable/round"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/black_500"
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:tint="@color/white"
                        android:src="@drawable/ic_dashboard" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Acelerometro"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bariol_bold"
                    android:textSize="14sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_giroscopio"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#8d1a1a1a"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:background="?android:selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:background="@drawable/round"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/black_500"
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        app:tint="@color/white"
                        android:src="@drawable/ic_dashboard" />

                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Giroscopio"
                    android:textColor="@color/white"
                    android:fontFamily="@font/bariol_bold"
                    android:textSize="14sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>


</LinearLayout>